#include <stdio.h>
int main()
{
    // Write C code here
    int r,c,j;
    c=2*r-1;
    scanf("%d",&r);
    for(int i=1; i<=r; i++) 
    {
       for(j=1;j<=i;j++)
       {  
           if(j==1 || j==i ||i==r)
           {  
           printf("* ");
           }
           else
           {
               printf("  ");
           }
      }
     printf("\n");
    }
     return 0;
}
